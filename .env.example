# Application Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
# MySQL connection string (required for database operations)
DATABASE_URL=mysql://user:password@localhost:3306/forexapp

# Server Configuration
PORT=3000
NODE_ENV=development

# Authentication
# JWT secret for session cookies (generate a random string)
JWT_SECRET=your-secret-key-here-generate-random-string

# OAuth Configuration
# Manus OAuth server URL
OAUTH_SERVER_URL=https://oauth.manus.computer
# Your Manus App ID
VITE_APP_ID=your-app-id-here
# Owner OpenID (the first user with this OpenID will be granted admin role)
OWNER_OPEN_ID=your-openid-here

# Built-in Forge API (Optional)
# API credentials for Manus Forge service
BUILT_IN_FORGE_API_URL=https://forge.manus.computer
BUILT_IN_FORGE_API_KEY=your-forge-api-key-here

# Grok API Configuration (Optional)
# Configure in admin settings UI after deployment
# This is stored in the database, not environment variables
